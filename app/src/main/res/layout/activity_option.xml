<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.co.imastudio.adabkepadaorangtua.OptionActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/music" />

    <ImageView
        android:id="@+id/imageAngka"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imageNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageAngka"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/imageAngka"
        android:layout_toRightOf="@+id/imageAngka"
        android:background="@drawable/btn_next" />

    <ImageView
        android:id="@+id/imageTurun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageAngka"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/imageAngka"
        android:layout_toStartOf="@+id/imageAngka"
        android:background="@drawable/btn_back" />
</RelativeLayout>
